{
  "name": "remote-job-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:clean": "tsx src/lib/clean-db.ts",
    "sync-jobs": "tsx src/lib/job-sync.ts",
    "cleanup-jobs": "tsx src/lib/cleanup-jobs.ts",
    "greenhouse:cleanup": "tsx src/lib/job-sources/cleanup-greenhouse-companies.ts",
    "greenhouse:discover": "tsx src/lib/job-sources/discover-greenhouse-companies.ts",
    "greenhouse:maintain": "npm run greenhouse:cleanup && npm run greenhouse:discover",
    "lever:cleanup": "tsx src/lib/job-sources/cleanup-lever-companies.ts",
    "lever:discover": "tsx src/lib/job-sources/discover-lever-companies.ts",
    "lever:maintain": "npm run lever:cleanup && npm run lever:discover",
    "remoteok:cleanup": "tsx src/lib/cleanup-jobs.ts --source=RemoteOK",
    "himalayas:cleanup": "tsx src/lib/cleanup-jobs.ts --source=Himalayas",
    "maintain-all": "npm run greenhouse:maintain && npm run lever:maintain",
    "full-sync": "npm run maintain-all && npm run sync-jobs",
    "scheduler": "tsx src/lib/scheduler.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.7.0",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.36.4",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.544.0",
    "nitro": "latest",
    "node-cron": "^4.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "drizzle-kit": "^0.28.1",
    "jsdom": "^27.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0"
  }
}
